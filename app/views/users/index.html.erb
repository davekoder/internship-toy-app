<p style="color: green"><%= notice %></p>

<div class='flex flex-col text-center align-middle w-full h-screen bg-sky-500 pt-5'>
  <div class='text-white'>
    <h1 CLASS='font-bold'>LIST OF USERS</h1>
  </div>

  <div class='flex justify-center w-full'>
    <div id="users">
      <% @users.each do |user| %>
        <div class='border border-white rounded w-96 my-3 py-5 text-white' >
          <%= render user %>
          <p class='mt-7'>
            <%= link_to "Show this user", user, class: "border border-2 border-white rounded-sm p-2" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
  <div class='flex justify-center w-full'>
    <%= link_to "New user", new_user_path, class: "bg-white w-24 p-2 rounded" %>
  </div>
</div>